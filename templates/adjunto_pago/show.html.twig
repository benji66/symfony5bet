{% extends '@FgimenezAdminlte/layout.admin.html.twig' %}

{% block title %}Recarga{% endblock %}

{% block body %}
    <h1>Recarga</h1>

    <div class="card-body table-responsive p-0">
      <table class="table table-hover text-nowrap">
        <tbody>
             <tr>
                <th>Comprobante</th>
                <td><img src="{{ adjunto_pago.ruta }}" width="800"></td>
            </tr>
            <tr>
                <th>Monto</th>
                <td><i class="fas fa-dollar-sign"></i> {{ adjunto_pago.monto }}</td>
            </tr>
            <tr>
                <th>Validado por</th>
                <td>{{ adjunto_pago.validadoBy }}</td>
            </tr>
            <tr>
                <th>Numero  de referencia</th>
                <td>{{ adjunto_pago.numeroReferencia }}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ adjunto_pago.observacion }}</td>
            </tr>
            <tr>
                <th>Creado por</th>
                <td>{{ adjunto_pago.createdBy }} {{ adjunto_pago.createdAt ? adjunto_pago.createdAt|date('Y-m-d H:i:s') : '' }} </td>
            </tr>
            <tr>
                <th>Actualizado por</th>
                <td>{{ adjunto_pago.updatedBy }} {{ adjunto_pago.updatedAt ? adjunto_pago.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
       
        </tbody>
    </table>
  </div>
    <a href="{{ path('adjunto_pago_index') }}">

        <i class="fas fa-arrow-left"></i>
        volver

    </a>


    {#{ include('adjunto_pago/_delete_form.html.twig') }#}
{% endblock %}
