{% extends '@FgimenezAdminlte/layout.admin.html.twig' %}

{% block title %}Apuestas abiertas{% endblock %}

{% block stylesheets %}
 <link rel="stylesheet" href="/bundles/fgimenezadminlte/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
{% endblock %}


{% block body %}
    <h1>Carreras Abiertas</h1>

    {# read and display all flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
    
        <div class="alert alert-{{ label }} alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <!-- <h5><i class="icon fas fa-check"></i> Alert!</h5> -->
                  {{ message }}
        </div>
    {% endfor %}
{% endfor %}

 
<div class="card">
            <div class="card-header">
              <h3 class="card-title">DataTable with default features</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                  <thead>
			            <tr>
			                <th>fecha</th>
			                <th>carrera</th>
			                <th>hipodromo</th>                 
			                <th>actions</th>              
			            </tr>
			        </thead>
			        <tbody>
			        {% for carrera in carreras %}
			            <tr>               
			                <td>{{ carrera.fecha ? carrera.fecha|date('Y-m-d') : '' }}</td>
			                <td>{{ carrera.numeroCarrera }}</td>  
			                <td>{{ carrera.Hipodromo.nombre }}</td>                             
			                    
			                <td>
			                    <a href="{{ path('carrera_abierta_show', {'id': carrera.id}) }}"><i class="far fa-eye">mostrar</i></a> 		                   
			                </td>
			            </tr>
			        {% else %}
			            <tr>
			                <td colspan="11">no records found</td>
			            </tr>
			        {% endfor %}
			        </tbody>

			        <tfoot>
			            <tr>                
			                <th>Fecha</th>
			                <th>Numero_carrera</th>
			                <th>Hipodromo</th> 
			                      
			                <th>actions</th>
			            </tr>
			        </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->

   
    
    </div>
 </div>
{% endblock %}

{% block javascripts %}

<!-- DataTables -->
<script src="/bundles/fgimenezadminlte/plugins/datatables/jquery.dataTables.js"></script>

<script>
  $(function () {

    $("#example1").DataTable();

    $('#example2').DataTable({
      "paging": false,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": false,
      "autoWidth": false,
    });
  });
</script>

{% endblock %}




