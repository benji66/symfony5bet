
{% block stylesheets %}
 <link rel="stylesheet" href="/bundles/fgimenezadminlte/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
{% endblock %}


{% block body %}
    <h1>Carrera </h1>



           <div class="card-header">
              <h3 class="card-title"></h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
     <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Cantidad_caballos</th>
                <th>Status</th>
                <th>Numero_carrera</th>
                <th>Orden_oficial</th>
                <th>CreatedBy</th>
                <th>UpdatedBy</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                
            </tr>
        </thead>
        <tbody>
        {% for carrera in carreras %}
            <tr>
                <td>{{ carrera.id }}</td>
                <td>{{ carrera.fecha ? carrera.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ carrera.cantidadCaballos }}</td>
                <td>{{ carrera.status }}</td>
                <td>{{ carrera.numeroCarrera }}</td>
                <td>{{ carrera.ordenOficial ? carrera.ordenOficial|json_encode : '' }}</td>
                <td>{{ carrera.createdBy }}</td>
                <td>{{ carrera.updatedBy }}</td>
                <td>{{ carrera.createdAt ? carrera.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ carrera.updatedAt ? carrera.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

        <tfoot>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Cantidad_caballos</th>
                <th>Status</th>
                <th>Numero_carrera</th>
                <th>Orden_oficial</th>
                <th>CreatedBy</th>
                <th>UpdatedBy</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
               
            </tr>
        </tfoot>
    </table>

  
    </div>

{% endblock %}
