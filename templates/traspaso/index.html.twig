{% extends '@FgimenezAdminlte/layout.admin.html.twig' %}

{% block title %}Traspaso Saldo index{% endblock %}

{% block stylesheets %}
 <link rel="stylesheet" href="/bundles/fgimenezadminlte/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
{% endblock %}


{% block body %}
    <h1>Traspaso de Saldo</h1>

{# read and display all flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
    
        <div class="alert alert-{{ label }} alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <!-- <h5><i class="icon fas fa-check"></i> Alert!</h5> -->
                  {{ message }}
        </div>
    {% endfor %}
{% endfor %}





           <div class="card-header">
              <h3 class="card-title"></h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
     <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>  
                <th>Fecha</th>
                <th>Usuario Descuento</th>
                <th>Usuario Abono</th>
                <th>Monto</th>
                <th>Realizado por</th>
                              
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for traspaso in traspasos %}
            <tr>
                
                <td>{{ traspaso.createdAt ? traspaso.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ traspaso.Descuento.Usuario.username }}</td>
                <td>{{ traspaso.Abono.Usuario.username }}</td>
                <td>{{ traspaso.monto }}</td>
              
                <td>{{ traspaso.createdBy ? traspaso.createdBy : 'en proceso' }}</td>
                
              
                
                <td>
                    <a href="{{ path('traspaso_show', {'id': traspaso.id}) }}"><i class="far fa-eye">mostrar</i></a>              
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

        <tfoot>
            <tr>  
                <th>Fecha</th>
                <th>Usuario Descuento</th>
                <th>Usuario Abono</th>
                <th>Monto</th>
                <th>Realizado por</th>
                              
                <th>actions</th>
            </tr>
        </tfoot>
    </table>

   <div class="navigation float-right">
            {{ knp_pagination_render(traspasos) }}
        </div>
 

        <a href="{{ path('traspaso_new') }}">
            <i class="fas fa-plus"></i>Nuevo
        </a>
    
        
    </div>
 </div>
{% endblock %}

{% block javascripts %}

<!-- DataTables -->
<script src="/bundles/fgimenezadminlte/plugins/datatables/jquery.dataTables.js"></script>

<script>



  $(function () {

    $('#example2').DataTable({
      "paging": false,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": false,
      "autoWidth": false,
    });
  });
</script>

{% endblock %}




