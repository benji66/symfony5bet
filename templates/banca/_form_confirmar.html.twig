<form name="confirmar" method="post" action="{{ path('banca_cargar') }}" onsubmit="return confirm('Cargar apuestas?');">
<div class="row">
         <!-- left column -->
	<div class="col-md-6">

		
		    <div class="form-group">
		       {{ form_label(form_confirmar.tipo,'Tipo:') }}
	            <div class="input-group">
	                
	                {{ form_widget(form_confirmar.tipo) }}
			        <small>{{ form_help(form_confirmar.tipo) }}</small>
	            </div>
		                  <!-- /.input group -->	                    
		    </div>

		    <div class="input-group input-group-sm" id="datos_perfil">
				<div class="input-group-prepend">
	                <span class="input-group-text"><i class="fas fa-horse"></i></span>
	            </div>
			    <input type="number" id="caballos_texto" class="form-control">
			    <span class="input-group-append">
			    	<button type="button" class="btn btn-info btn-flat" id="caballos_boton" >agregar</button>
			    </span>
		    </div>	

		     	
		    <input type="hidden" name="_token" value="{{ csrf_token('cargar' ~ app.user.Perfil.id) }}">
		    
			  
		
	</div>

	<div class="col-md-6">
	    <div class="form-group">
	       <ul id="datos_caballos"></ul>	      
	       <button type="button" class="btn btn-block btn-primary" id="banca_boton_cargar">Cargar</button>
	    </div>	   
	</div> 
</div>
</form>

