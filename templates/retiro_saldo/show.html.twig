{% extends '@FgimenezAdminlte/layout.admin.html.twig' %}

{% block title %}RetiroSaldo{% endblock %}

{% block body %}
    <h1>Retiro Saldo</h1>

    <div class="card-body table-responsive p-0">
      <table class="table table-hover text-nowrap">
        <tbody>
             <tr>
                <th>Comprobante</th>
                <td><img src="{{ retiro_saldo.ruta }}" width="800"></td>
            </tr>
            <tr>
                <th>Monto</th>
                <td><i class="fas fa-dollar-sign"></i> {{ retiro_saldo.monto }}</td>
            </tr>
            <tr>
                <th>Validado por</th>
                <td>{{ retiro_saldo.validadoBy }}</td>
            </tr>
            <tr>
                <th>Numero  de referencia</th>
                <td>{{ retiro_saldo.numeroReferencia }}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ retiro_saldo.observacion }}</td>
            </tr>
            <tr>
                <th>Creado por</th>
                <td>{{ retiro_saldo.createdBy }} {{ retiro_saldo.createdAt ? retiro_saldo.createdAt|date('Y-m-d H:i:s') : '' }} </td>
            </tr>
            <tr>
                <th>Actualizado por</th>
                <td>{{ retiro_saldo.updatedBy }} {{ retiro_saldo.updatedAt ? retiro_saldo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
       
        </tbody>
    </table>
</div>
    <a href="{{ path('retiro_saldo_index') }}">

        <i class="fas fa-arrow-left"></i>
        volver

    </a>

   
{% endblock %}
