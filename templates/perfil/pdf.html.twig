
{% block stylesheets %}
 <link rel="stylesheet" href="/bundles/fgimenezadminlte/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
{% endblock %}


{% block body %}
    <h1>Perfil index FRAN</h1>



           <div class="card-header">
              <h3 class="card-title">DataTable with minimal features & hover style</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
     <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Roles</th>
                <th>Nickname</th>
                <th>Saldo</th>
                <th>Activo</th>
                <th>CreatedBy</th>
                <th>UpdatedBy</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                
            </tr>
        </thead>
        <tbody>
        {% for perfil in perfils %}
            <tr>
                <td>{{ perfil.id }}</td>
                <td>{{ perfil.roles ? perfil.roles|json_encode : '' }}</td>
                <td>{{ perfil.nickname }}</td>
                <td>{{ perfil.saldo }}</td>
                <td>{{ perfil.activo ? 'Yes' : 'No' }}</td>
                <td>{{ perfil.createdBy }}</td>
                <td>{{ perfil.updatedBy }}</td>
                <td>{{ perfil.createdAt ? perfil.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ perfil.updatedAt ? perfil.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

        <tfoot>
            <tr>
                <th>Id</th>
                <th>Roles</th>
                <th>Nickname</th>
                <th>Saldo</th>
                <th>Activo</th>
                <th>CreatedBy</th>
                <th>UpdatedBy</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
               
            </tr>
        </tfoot>
    </table>

  
    </div>

{% endblock %}
