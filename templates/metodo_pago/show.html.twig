{% extends '@FgimenezAdminlte/layout.admin.html.twig' %}

{% block title %}Metodo de Pago{% endblock %}

{% block body %}
    <h1>Metodo de Pago</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ metodo_pago.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ metodo_pago.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ metodo_pago.descripcion }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ metodo_pago.activo ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('metodo_pago_index') }}">

        <i class="fas fa-arrow-left"></i>
        volver

    </a>

    <a href="{{ path('metodo_pago_edit', {'id': metodo_pago.id}) }}">
        
         <i class="fas fa-edit"></i>
        edit

    </a>

    {#{ include('metodo_pago/_delete_form.html.twig') }#}
{% endblock %}
