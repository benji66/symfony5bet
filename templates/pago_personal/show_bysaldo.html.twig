{% extends '@FgimenezAdminlte/layout.admin.html.twig' %}

{% block title %}Pago por Saldo{% endblock %}

{% block body %}
    <h1>Pago por Saldo</h1>

     <div class="card-body table-responsive p-0">
      <table class="table table-hover text-nowrap">
        <tbody>
            
            <tr>
                <th>Nickname</th>
                <td>
                    <a href="{{ path('user_show', {'id': pago.Perfil.Usuario.id}) }}">
                        {{ pago.Perfil.Nickname }}
                    </a>    
                </td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ pago.Perfil.Usuario.nombre }} {{ pago.Perfil.Usuario.apellido }}</td>
            </tr>

            <tr>
                <th>Monto</th>
                <td><i class="fas fa-dollar-sign"></i> {{ pago.monto }}</td>
            </tr>
   
            
            <tr>
                <th>Observacion</th>
                <td>{{ pago.observacion }}</td>
            </tr>
            <tr>
                <th>Creado por</th>
                <td>{{ pago.createdBy }} {{ pago.createdAt ? pago.createdAt|date('Y-m-d H:i:s') : '' }} </td>
            </tr>

       
        </tbody>
    </table>
</div>
    <a href="{{ path('adjunto_pago_index') }}">

        <i class="fas fa-arrow-left"></i>
        volver

    </a>

{% endblock %}
