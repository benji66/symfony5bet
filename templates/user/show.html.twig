{% extends '@FgimenezAdminlte/layout.admin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.perfil.nombre }} {{ user.perfil.apellido }}</td>
            </tr>

            <tr>
                <th>Telefono</th>
                <td>{{ user.perfil.telefono }}</td>
            </tr>


        </tbody>
    </table>

    <a href="{{ path('user_index') }}">

        <i class="fas fa-arrow-left"></i>
        back to list

    </a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">
        
         <i class="fas fa-edit"></i>
        edit

    </a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
